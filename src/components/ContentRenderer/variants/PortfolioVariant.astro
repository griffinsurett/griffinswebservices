---
// src/components/ContentRenderer/variants/PortfolioVariant.astro
/**
 * Portfolio Variant
 * Renders featured projects inside the React-based PortfolioCarousel.
 */

import type { BaseVariantProps } from "../ContentRenderer.types";
import SectionHeader from "@/components/SectionHeader.astro";
import Button from "@/components/Button/Button";
import PortfolioCarousel from "@/components/LoopTemplates/PortfolioCarousel";
import { shouldShowCollectionCTA } from "../utils/helpers";

interface Props extends BaseVariantProps {
  autoplay?: boolean;
  autoAdvanceDelay?: number;
  eyebrow?: string;
}

const {
  items = [],
  title,
  description,
  className = "",
  collectionUrl,
  collectionTitle,
  id,
  autoplay = true,
  autoAdvanceDelay = 7000,
  eyebrow,
} = Astro.props as Props;

const safeItems = Array.isArray(items) ? (items as Record<string, any>[]) : [];
const showHeader = Boolean(eyebrow || title || description);
const ctaLabelSource = collectionTitle || title || "Projects";
const viewAllText = `View All ${ctaLabelSource}`.trim();
---

<section
  id={id}
  class={`bg-bg relative overflow-hidden ${className}`.trim()}
>
  <div class="section-dim-border"></div>

  <div class="">
    {showHeader && (
      <SectionHeader
        title={eyebrow}
        heading={title}
        description={description}
        className="text-center"
        headingClassName="h2 mb-6"
        descriptionClassName="large-text max-w-2xl mx-auto"
      />
    )}

    <PortfolioCarousel
      client:visible
      items={safeItems}
      autoplay={autoplay}
      autoAdvanceDelay={autoAdvanceDelay}
      className={`${showHeader ? "mt-12" : ""}`.trim()}
    />

    {shouldShowCollectionCTA(collectionUrl, safeItems.length) && (
      <div class="mt-12 text-center">
        <Button
          client:visible
          href={collectionUrl}
          rightIcon="lu:chevron-right"
          variant="secondary"
        >
          {viewAllText}
        </Button>
      </div>
    )}
  </div>
</section>
