---
// src/components/LoopComponents/CheckListItem.astro
export interface Props {
  checkmarkColor?: string;
  checkmarkBgColor?: string;
  textClassName?: string;
  class?: string;
}

const {
  checkmarkColor = "text-primary",
  checkmarkBgColor = "bg-primary/20",
  textClassName = "text-text text-sm leading-relaxed",
  class: className = "",
} = Astro.props;
---

<div class={`flex items-start gap-3 ${className}`}>
  <div
    class={`w-5 h-5 rounded-full ${checkmarkBgColor} flex items-center justify-center flex-shrink-0 mt-0.5`}
  >
    <svg class={`w-3 h-3 ${checkmarkColor}`} fill="currentColor" viewBox="0 0 20 20">
      <path
        fill-rule="evenodd"
        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
        clip-rule="evenodd"
      />
    </svg>
  </div>
  <span class={textClassName}>
    <slot />
  </span>
</div>
